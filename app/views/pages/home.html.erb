<div class="home-callout text-center container-fluid">
    <h1>Rails Membership Site</h1>
    <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
            <h3>
                <p>A fully functional web app made with Ruby on Rails.</p> 
                
            </h3>
           
        </div>
    </div>
    
    <div class="row">
    <p></p> 
        <div class="col-xs-3 col-xs-offset-3">
            <ul class='list-unstyled text-left'>
                <li>User Memberships</li>
                <li>User Profiles</li>
                <li>Photo uploading</li>
            </ul>
        </div>
        <div class="col-xs-3">
            <ul class='list-unstyled text-left'>
                <li>Ecommerce</li>
                <li>Matchmaking</li>
                <li>Payments with Stripe</li>
            </ul>
        </div>
    </div>
            
        
    
</div>
<div class="container home-signup-links">
    <div class='row'>
      
       <% if user_signed_in? %>
           
           <div class="col-md-6">
               <div class="well">
                   <h2 class='text-center'>Your Profile</h2>
                   <% if current_user.profile %>
                       <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                       <%= link_to "View your profile", user_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                  <% else %>
                  <%= link_to "Create your profile", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                  <% end %>
               </div>
           </div>
           <div class="col-md-6">
               <div class="well">
                   <h2 class='text-center'>Browse Members</h2>
                   <p>See the member list and get contact info</p>
                   <%= link_to "visit the community", "#", class: 'btn btn-default btn-lg btn-block' %>
               </div>
           </div>
           
           
       
       <% else %>
            <div class='col-md-6'>
                <div class='well'>
                    <h2 class='text-center'>Basic Membership</h2>
                    <h4>Sign up for free and get basic access.</h4>
                    <br/>
                    <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: "btn btn-primary btn-lg btn-block" %>
                </div>
            </div>
            <div class='col-md-6'>
                <div class='well'>
                    <h2 class='text-center'>Pro Membership</h2>
                    <h4>Sign up for the pro account for $10 per month and get access to the community and contact information.</h4>
                    
                    <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: "btn btn-success btn-lg btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>