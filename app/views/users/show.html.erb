<div class="container">
    <div class="row">
        <div class="col-md-3 text-center">
            <%= image_tag @user.profile.avatar.url, :class => "img-thumbnail" %>
            
        </div>
        <div class="col-md-6">
            <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
            <h3><span class='job-title-icon'><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
            <div class="well profile-block profile-description">
                <h3>Description</h3>
                <p><%= @user.profile.description %></p>
            </div>
             <% if current_user.plan_id == 2 %>
             <div class="well profile-block profile-contact">
                 <h3>Contact Info</h3>
                <p>Email: <%= @user.profile.contact_email %></p>
                <p>Phone: <%= @user.profile.phone_number %></p>
            </div>
            <% end %>
        
        </div>
    </div>

    
</div>